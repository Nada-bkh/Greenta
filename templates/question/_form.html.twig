{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-container'}}) }}
    <div class="form-group">
        {{ form_label(form.question) }}
        {{ form_widget(form.question, {'attr': {'class': 'form-control'}}) }}
          {% if form_errors(form.question) %}
            <span class="text-danger">{{ form_errors(form.question) }}</span>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.reponse) }}
        {{ form_widget(form.reponse, {'attr': {'class': 'form-control'}}) }}
       {% if form_errors(form.reponse) %}
            <span class="text-danger">{{ form_errors(form.reponse) }}</span>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.note) }}
        {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
          {% if form_errors(form.note) %}
            <span class="text-danger">{{ form_errors(form.note) }}</span>
        {% endif %}
    </div>
    

    <button type="submit" class="btn btn-primary">{{ button_label|default('Next') }}</button>
{{ form_end(form) }}

<style>
    .form-container {
        max-width: 500px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .form-group {
        margin-bottom: 20px;
    }
</style>
