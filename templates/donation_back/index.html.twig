{% extends 'baseBack.html.twig' %}

{% block title %}Donation index
{% endblock %}

{% block body %}
	<h1>Donation index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Address</th>
				<th>Date</th>
				<th>FirstName</th>
				<th>LastName</th>
				<th>PhoneNumber</th>
				<th>Amount</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for donation in donations %}
				<tr>
					<td>{{ donation.id }}</td>
					<td>{{ donation.address }}</td>
					<td>{{ donation.date }}</td>
					<td>{{ donation.firstName }}</td>
					<td>{{ donation.lastName }}</td>
					<td>{{ donation.phoneNumber }}</td>
					<td>{{ donation.amount }}</td>
					<td>
						<a href="{{ path('app_donation_back_show', {'id': donation.id}) }}">show</a>
						<a href="{{ path('app_donation_back_edit', {'id': donation.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
