{% extends 'backt.html.twig' %}

{% block title %}Product List{% endblock %}

{% block body %}



<div style="margin-left:315px; margin-top:75px">
    <h1>Product List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Quantity</th>
                <th>Size</th>
                <th>Price</th>
                <th>Description</th>
                <th>Disponibility</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.productname }}</td>
                <td>{{ product.productquantity }}</td>
                <td>{{ product.productsize }}</td>
                <td>{{ product.productprice }}</td>
                <td>{{ product.productdescription }}</td>
                <td>{{ product.productdisponibility }}</td>
                <td>
                    <a href="{{ path('app_product_back_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_product_back_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
 <button class="btn-succes" style="margin-left:350px;margin-top:35px;
 border: 2px solid black;
  background-color: white;
  color: black;
  font-size: 16px;
  padding: 14px 28px;
  cursor: pointer;
  border-color: #04AA6D;
  color: green;
  border-radius: 5px;" 
  href="{{ path('app_product_back_new') }}" >Create new</button>
    
{% endblock %}
